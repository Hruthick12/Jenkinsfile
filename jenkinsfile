@Library('MyLibrary') _
pipeline {
    agent any
    tools {
        maven "Maven"
    }
    stages {
        
        stage('Hello World') {
            steps {
                script 
                {
                    helloworld.hello()
                }
            }
        }

        stage('Checkout code from Git.') {
            steps {
            
            script{checkout_git.checkout_git("Jenkinsfile");
            }
            }
        }

            stage('create tag on git repo.') {
            steps {
            
            script{checkout_git.checkout_git("Jenkinsfile")}
            }
        }
            
            
          stage('Triggering Aws Code build.') {
            steps {
            
            script{
            aws_codebuild.aws_codebuild("java-project");
            }
            }
          }
        }
    }


            
            
