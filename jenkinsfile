
@Library('MyLibrary') _
pipeline {
    agent any
    stages {

        stage('Checkout code from Git.') {
            steps {
                dir("sparkjava-war-example")
                {
            
            script{checkout_git.checkout_git("sparkjava-war-example", "master")}
            }
        }
        }
            stage('create tag on git repo.') {
            steps {
                dir("sparkjava-war-example")
                {
            
            script{checkout_git.checkout_git("${tag}")}
            }
        }
            }
            
            
          stage('Triggering Aws Code build.') {
            steps {
            dir("sparkjava-war-example")
                {
            
            script{
            aws_codebuild.aws_codebuild("java-project", "${tag}")}
            }
          }
        }
    }
}


            
            
